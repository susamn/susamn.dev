---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const latestPosts = (await getCollection('blog'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 3);

const projects = (await getCollection('projects'))
	.filter((project) => project.data.featured)
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 4);
---

<Layout title="Susamn | Senior Software Engineer">
	<section class="flex flex-col-reverse md:flex-row gap-8 md:gap-12 items-start md:items-center mb-16 md:mb-24">
		<div class="flex-1 space-y-6">
			<h1 class="text-4xl md:text-5xl font-bold tracking-tight text-slate-900 leading-tight">
				Hi, I'm Susamn.
			</h1>
			<p class="text-lg md:text-xl text-slate-600 leading-relaxed max-w-2xl">
				I'm a senior software engineer who loves building tools and sharing knowledge. 
				I specialize in distributed systems and open source. When I'm not coding, 
				I'm writing technical articles or launching new experiments.
			</p>
			<div class="flex flex-wrap gap-4 pt-2">
				<a href="https://github.com" class="inline-flex items-center gap-2 text-slate-600 hover:text-indigo-600 transition-colors">
					<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.11.81 2.235 0 1.62-.015 2.925-.015 3.315 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/></svg>
					<span class="font-medium">GitHub</span>
				</a>
				<a href="https://twitter.com" class="inline-flex items-center gap-2 text-slate-600 hover:text-sky-500 transition-colors">
					<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.84 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/></svg>
					<span class="font-medium">Twitter</span>
				</a>
			</div>
		</div>
		<div class="shrink-0 relative">
			<div class="w-32 h-32 md:w-40 md:h-40 bg-slate-100 rounded-full border-2 border-white shadow-lg overflow-hidden flex items-center justify-center text-slate-300">
				<svg class="w-20 h-20" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"/></svg>
			</div>
		</div>
	</section>

	<div class="grid md:grid-cols-2 gap-12 md:gap-20">
		<section class="space-y-8">
			<div class="flex items-center justify-between pb-2 border-b border-slate-100">
				<h2 class="text-xl font-bold tracking-tight text-slate-900">Recent Projects</h2>
				<a href="/projects" class="text-sm font-medium text-indigo-600 hover:text-indigo-700">View all</a>
			</div>
			<div class="space-y-8">
				{projects.map((project) => (
					<div class="group">
						<h3 class="font-semibold text-slate-900 group-hover:text-indigo-600 transition-colors">
							<a href={project.data.link || project.data.github} class="flex items-center gap-2">
								{project.data.title}
								<svg class="w-4 h-4 text-slate-400 group-hover:text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" /></svg>
							</a>
						</h3>
						<p class="text-sm text-slate-600 mt-1 leading-relaxed">{project.data.description}</p>
						<div class="flex flex-wrap gap-2 mt-2">
							{project.data.tags.slice(0, 3).map(tag => (
								<span class="text-xs text-slate-400">#{tag}</span>
							))}
						</div>
					</div>
				))}
				{projects.length === 0 && (
					<p class="text-slate-500 italic text-sm">No featured projects yet.</p>
				)}
			</div>
		</section>

		<section class="space-y-8">
			<div class="flex items-center justify-between pb-2 border-b border-slate-100">
				<h2 class="text-xl font-bold tracking-tight text-slate-900">Latest Writing</h2>
				<a href="/blog" class="text-sm font-medium text-indigo-600 hover:text-indigo-700">Read all</a>
			</div>
			<div class="space-y-8">
				{latestPosts.map((post) => (
					<article class="group">
						<time class="text-xs font-medium text-slate-400 mb-1 block" datetime={post.data.pubDate.toISOString()}>
							{post.data.pubDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
						</time>
						<h3 class="font-semibold text-slate-900 group-hover:text-indigo-600 transition-colors mb-1">
							<a href={`/blog/${post.slug}`}>{post.data.title}</a>
						</h3>
						<p class="text-sm text-slate-600 leading-relaxed line-clamp-2">{post.data.description}</p>
					</article>
				))}
			</div>
		</section>
	</div>
</Layout>
