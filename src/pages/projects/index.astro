---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const projects = (await getCollection('projects')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const featuredProjects = projects.filter(p => p.data.featured);
const otherProjects = projects.filter(p => !p.data.featured);
---

<Layout title="Projects | Supratim Samanta">
	<!-- Page Header -->
	<header class="mb-10">
		<div class="flex items-center gap-4 mb-2">
			<h1 class="font-['Fraunces',_serif] text-3xl font-semibold text-stone-900">Projects</h1>
			<div class="flex-1 h-px bg-stone-200"></div>
		</div>
		<p class="text-stone-500 max-w-2xl">A collection of tools, libraries, and products I've built and launched.</p>
	</header>

	<!-- Stats Banner -->
	<div class="bg-gradient-to-br from-stone-100 via-stone-50 to-amber-50/30 rounded-2xl p-6 border border-stone-200/60 mb-10">
		<div class="flex flex-wrap gap-8 justify-center md:justify-start">
			<div class="text-center md:text-left">
				<div class="font-['Fraunces',_serif] text-3xl font-semibold text-stone-900">{projects.length}</div>
				<div class="text-sm text-stone-500">Projects</div>
			</div>
			<div class="hidden md:block w-px bg-stone-200"></div>
			<div class="text-center md:text-left">
				<div class="font-['Fraunces',_serif] text-3xl font-semibold text-stone-900">{featuredProjects.length}</div>
				<div class="text-sm text-stone-500">Featured</div>
			</div>
		</div>
	</div>

	<!-- Featured Projects -->
	{featuredProjects.length > 0 && (
		<section class="mb-12">
			<div class="flex items-center gap-4 mb-6">
				<h2 class="font-['Fraunces',_serif] text-lg font-semibold text-stone-800">Featured</h2>
				<div class="flex-1 h-px bg-stone-200"></div>
			</div>
			<div class="grid md:grid-cols-2 gap-6">
				{featuredProjects.map((project) => (
					<div class="group bg-white rounded-xl border border-stone-200 p-6 hover:border-amber-300 hover:shadow-lg transition-all duration-200 flex flex-col">
						<div class="flex flex-wrap gap-2 mb-4">
							{project.data.tags.slice(0, 4).map(tag => (
								<span class="text-[10px] font-semibold text-stone-400 bg-stone-100 px-2 py-1 rounded uppercase tracking-wider">
									{tag}
								</span>
							))}
						</div>
						<h3 class="font-['Fraunces',_serif] text-xl font-semibold text-stone-900 group-hover:text-amber-700 transition-colors mb-2">
							{project.data.title}
						</h3>
						<p class="text-stone-500 text-sm leading-relaxed mb-6 flex-grow">
							{project.data.description}
						</p>
						<div class="flex items-center gap-4 pt-4 border-t border-stone-100">
							{project.data.github && (
								<a
									href={project.data.github}
									class="inline-flex items-center gap-2 text-sm font-medium text-stone-600 hover:text-stone-900 transition-colors"
								>
									<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.11.81 2.235 0 1.62-.015 2.925-.015 3.315 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/></svg>
									Source
								</a>
							)}
							{project.data.link && (
								<a
									href={project.data.link}
									class="inline-flex items-center gap-2 text-sm font-medium text-amber-600 hover:text-amber-700 transition-colors"
								>
									Live Demo
									<svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
									</svg>
								</a>
							)}
						</div>
					</div>
				))}
			</div>
		</section>
	)}

	<!-- Other Projects -->
	{otherProjects.length > 0 && (
		<section class="mb-12">
			<div class="flex items-center gap-4 mb-6">
				<h2 class="font-['Fraunces',_serif] text-lg font-semibold text-stone-800">Other Projects</h2>
				<div class="flex-1 h-px bg-stone-200"></div>
				<span class="text-sm text-stone-400">{otherProjects.length} project{otherProjects.length > 1 ? 's' : ''}</span>
			</div>
			<div class="bg-white rounded-xl border border-stone-200 divide-y divide-stone-100">
				{otherProjects.map((project) => (
					<div class="group p-5 hover:bg-stone-50/50 transition-colors">
						<div class="flex items-start gap-4">
							<div class="flex-1 min-w-0">
								<h3 class="font-semibold text-stone-900 group-hover:text-amber-700 transition-colors mb-1">
									{project.data.title}
								</h3>
								<p class="text-sm text-stone-500 leading-relaxed line-clamp-2 mb-2">
									{project.data.description}
								</p>
								<div class="flex flex-wrap gap-2">
									{project.data.tags.slice(0, 3).map(tag => (
										<span class="text-[10px] font-medium text-stone-400 bg-stone-100 px-2 py-0.5 rounded">
											{tag}
										</span>
									))}
								</div>
							</div>
							<div class="flex items-center gap-3 shrink-0">
								{project.data.github && (
									<a
										href={project.data.github}
										class="text-stone-400 hover:text-stone-700 transition-colors"
										aria-label="View source"
									>
										<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.11.81 2.235 0 1.62-.015 2.925-.015 3.315 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/></svg>
									</a>
								)}
								{project.data.link && (
									<a
										href={project.data.link}
										class="text-stone-400 hover:text-amber-600 transition-colors"
										aria-label="View demo"
									>
										<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
										</svg>
									</a>
								)}
							</div>
						</div>
					</div>
				))}
			</div>
		</section>
	)}

	<!-- GitHub Activity -->
	<section>
		<div class="flex items-center gap-4 mb-6">
			<h2 class="font-['Fraunces',_serif] text-lg font-semibold text-stone-800">Open Source Activity</h2>
			<div class="flex-1 h-px bg-stone-200"></div>
		</div>
		<div class="bg-white rounded-xl border border-stone-200 p-4 md:p-6">
			<img
				src="https://ghchart.rshah.org/b45309/susamn"
				alt="GitHub Contribution Graph"
				class="w-full h-auto"
				loading="lazy"
			/>
		</div>
		<p class="text-center text-sm text-stone-400 mt-4">
			<a href="https://github.com/susamn" class="text-amber-600 hover:text-amber-700 transition-colors">View GitHub Profile</a>
		</p>
	</section>
</Layout>
